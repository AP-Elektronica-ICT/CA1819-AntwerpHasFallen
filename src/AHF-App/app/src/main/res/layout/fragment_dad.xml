<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz"
    tools:context="com.ahf.antwerphasfallen.Fragments.QuizFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_alignParentRight="true"
            android:text="Voorbeeldvraag"
            android:textColor="#fff"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="8dp">

            <EditText
                android:id="@+id/Spinner1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_alignParentLeft="true"
                android:inputType="number"></EditText>


            <TextView
                android:id="@+id/Choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Keuze 1"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="8dp">


            <EditText
                android:id="@+id/Spinner2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#fff"
                android:inputType="number"></EditText>


            <TextView
                android:id="@+id/Choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Keuze 2"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="8dp">


            <EditText
                android:id="@+id/Spinner3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#fff"
                android:inputType="number"></EditText>


            <TextView
                android:id="@+id/Choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Keuze 3"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="8dp">


            <EditText
                android:id="@+id/Spinner4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#fff"
                android:inputType="number"></EditText>


            <TextView
                android:id="@+id/Choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Keuze 4"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dadsolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"
            android:text="Check solution"
            android:textColor="#fff" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"
            android:text="Go back"
            android:textColor="#fff" />


    </LinearLayout>
</FrameLayout>
