<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzlelayout"
    tools:context="com.ahf.antwerphasfallen.Fragments.QuizFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"

            android:text="Quizpuzzle"
            android:textColor="#fff" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/substitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"
            android:text="SubstitutionPuzzle"
            android:textColor="#fff" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/anagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"
            android:text="Anagram"
            android:textColor="#fff" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Dad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"

            android:text="Drag and Drop"
            android:textColor="#fff" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_leaveLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btnlayout"
            android:padding="8dp"
            android:text="verlaat locatie"
            android:textColor="#fff" />


    </LinearLayout>
</FrameLayout>